<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dimens80"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens10">

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_route_first"
                style="@style/title_text_style"
                android:layout_gravity="left"
                android:text="第一条绑定路由"
                android:textColor="@color/red" />

            <include
                android:id="@+id/layout_bind_route1"
                layout="@layout/layout_topo_route_detail"></include>

            <Button
                android:id="@+id/btn_cancel_route1"
                android:visibility="gone"
                style="@style/common_button_style"
                android:text="解绑路由" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_route_second"
                style="@style/title_text_style"
                android:layout_gravity="left"
                android:text="第二条绑定路由"
                android:textColor="@color/red" />

            <include
                android:id="@+id/layout_bind_route2"
                layout="@layout/layout_topo_route_detail"></include>

            <Button
                android:id="@+id/btn_cancel_route2"
                style="@style/common_button_style"
                android:visibility="gone"

                android:text="解绑路由" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

