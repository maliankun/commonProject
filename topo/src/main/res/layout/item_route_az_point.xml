<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimens10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_site_name_left"
            style="@style/textview_title_desc"
            android:text="起始站点：" />

        <TextView
            android:id="@+id/tv_site_name"
            style="@style/textview_title_txt"
            tools:text="站点名称" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_room_name_left"
            style="@style/textview_title_desc"
            android:text="起始机房：" />

        <TextView
            android:id="@+id/tv_room_name"
            style="@style/textview_title_txt"
            tools:text="网元名称" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_net_name_left"
            style="@style/textview_title_desc"
            android:text="起始网元：" />

        <TextView
            android:id="@+id/tv_net_name"
            style="@style/textview_title_txt"
            tools:text="网元名称" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_port_name_left"
            style="@style/textview_title_desc"
            android:text="网元端口：" />

        <TextView
            android:id="@+id/tv_port_name"
            style="@style/textview_title_txt"
            tools:text="网元名称" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_card_olp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_olp_device_left"
                style="@style/textview_title_desc"
                android:text="A端OLP设备：" />

            <TextView
                android:id="@+id/tv_olp_device"
                style="@style/textview_title_txt"
                tools:text="网元名称" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_olp_device_card_left"
                style="@style/textview_title_desc"
                android:text="A端OLP设备板卡：" />

            <TextView
                android:id="@+id/tv_olp_device_card"
                style="@style/textview_title_txt"
                tools:text="网元名称" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_olp_device_port_left"
                style="@style/textview_title_desc"
                android:text="A端OLP设备端口：" />

            <TextView
                android:id="@+id/tv_olp_device_port"
                style="@style/textview_title_txt"
                tools:text="网元名称" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>